<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".News.PostNewsActivity">
<RelativeLayout
    android:layout_margin="@dimen/margin_left_profile"
    android:id="@+id/post"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/post_img_user"
        android:background="@drawable/ic_person_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="@dimen/margin_left_profile"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:id="@+id/post_txt_name"
        android:layout_toRightOf="@+id/post_img_user"
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <ScrollView
        android:id="@+id/post_scr"
        android:layout_margin="@dimen/margin_left_profile"
        android:layout_below="@+id/post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/post_edt_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ScrollView>

</RelativeLayout>