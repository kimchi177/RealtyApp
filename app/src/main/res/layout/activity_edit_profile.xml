<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.EditProfileActivity">
    <TextView
        android:id="@+id/info"
        android:layout_margin="@dimen/margin_left_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Information base"/>
    <View
        android:id="@+id/view"
        android:layout_below="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark" />
<RelativeLayout
    android:id="@+id/baseinfo"
    android:layout_below="@+id/view"
    android:layout_marginLeft="@dimen/margin_left_profile"
    android:layout_marginRight="@dimen/margin_left_profile"
    android:padding="@dimen/margin_left_profile"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/edit_txt_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sex"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/edit_txtsex_intent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_txt_sex" />
    <ImageView
        android:id="@+id/edit_imvsex"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_edit"
        android:layout_alignParentRight="true" />
</RelativeLayout>
    <View
        android:id="@+id/view4"
        android:layout_below="@+id/baseinfo"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark" />

    <RelativeLayout
        android:id="@+id/baseinfo_bri"
        android:layout_below="@+id/view4"
        android:layout_marginLeft="@dimen/margin_left_profile"
        android:layout_marginRight="@dimen/margin_left_profile"
        android:padding="@dimen/margin_left_profile"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/edit_txt_briday"
            android:textStyle="bold"
            android:text="Brithday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/edit_txtbriday_intent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_txt_briday" />
        <ImageView
            android:id="@+id/edit_imvbriday"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_edit"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
    <View
        android:id="@+id/view3"
        android:layout_below="@+id/baseinfo_bri"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorPrimaryDark" />
    <TextView
        android:layout_margin="@dimen/margin_left_profile"
        android:id="@+id/editlive"
        android:layout_below="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live"/>
    <View
        android:id="@+id/view2"
        android:layout_below="@+id/editlive"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark" />
    <RelativeLayout
        android:id="@+id/baseinfo_live"
        android:layout_below="@+id/view2"
        android:layout_marginLeft="@dimen/margin_left_profile"
        android:layout_marginRight="@dimen/margin_left_profile"
        android:padding="@dimen/margin_left_profile"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/edit_txt_live"
            android:textStyle="bold"
            android:text="Live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/edit_txtlive_intent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_txt_live"
    />
        <ImageView
            android:id="@+id/edit_imvlive"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_edit"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
</RelativeLayout>