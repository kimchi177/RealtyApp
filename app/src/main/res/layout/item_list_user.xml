<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


       <RelativeLayout
           android:id="@+id/rela_name_image"
           android:layout_margin="@dimen/margin_left_profile"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/all_users_circle"
               android:layout_width="85dp"
               android:layout_height="85dp"
               android:background="@drawable/noticon" />
           <TextView
               android:layout_margin="@dimen/margin_left_profile"
               android:id="@+id/all_users_name"
               android:textColor="@color/black"
               android:layout_centerVertical="true"
               android:layout_toRightOf="@+id/all_users_circle"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="user name"
               android:textSize="18sp"
               android:textStyle="bold" />
       </RelativeLayout>
    <View
        android:background="#949393"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rela_name_image"/>
</RelativeLayout>