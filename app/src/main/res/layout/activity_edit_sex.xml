<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/edit_sex_background"
    tools:context=".Profile.EditProfile.EditSexActivity">
    <RelativeLayout
        android:id="@+id/linear_female"
        android:background="#ffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_left_profile">
        <TextView
            android:textSize="20sp"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"/>
        <ImageView
            android:id="@+id/es_imv_check_female"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_check_blue_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_below="@+id/linear_female"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark" />
    <RelativeLayout
        android:id="@+id/linear_male"
        android:background="#ffff"
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_left_profile">
        <TextView
            android:textSize="20sp"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"/>
        <ImageView
            android:id="@+id/es_imv_check_male"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_check_blue_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
   <LinearLayout
       android:layout_below="@+id/linear_male"
       android:layout_margin="@dimen/margin_left_profile"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <Button
           android:id="@+id/ex_btn_cancel"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:text="Cancel"/>

       <Button
           android:id="@+id/ex_btn_save"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:text="Save" />
   </LinearLayout>
</RelativeLayout>