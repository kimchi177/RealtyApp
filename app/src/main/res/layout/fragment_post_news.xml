        <!--android:gravity="top"-->
        <!--android:padding="@dimen/margin_left_profile"-->
        <!--style="@style/Base.TextAppearance.AppCompat.Large"-->
        <!--/>-->
        <EditText
            android:id="@+id/frag_post_post"
            android:layout_marginRight="@dimen/margin_left_profile"
            android:layout_marginLeft="@dimen/margin_left_profile"
            android:layout_marginTop="@dimen/margin_left_profile"
            android:padding="2dp"
            android:hint="Post a status update"
            android:layout_below="@+id/frag_post_RG"
            android:background="@drawable/background_edit_post_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
           android:gravity="top"
            android:minLines="6"
            android:maxLines="6"

          />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/frag_post_recyclerView"
        android:layout_margin="@dimen/margin_left_profile"
        android:layout_below="@+id/frag_post_post"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/price"
        android:layout_marginLeft="@dimen/margin_left_profile"
        android:layout_marginRight="@dimen/margin_left_profile"
        android:layout_below="@+id/frag_post_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <EditText
            android:background="@drawable/background_edit_post_new"
            android:padding="@dimen/margin_left_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Price"
            android:id="@+id/input_price"/>

    </android.support.design.widget.TextInputLayout>
    <!--</ScrollView>-->
    <RelativeLayout
        android:id="@+id/frag_selection"
        android:layout_below="@+id/price"
        android:layout_margin="@dimen/margin_left_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <RelativeLayout
           android:id="@+id/frag_post_add_location"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/frag_post_address"
               android:background="@drawable/ic_location_on_blue"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_centerVertical="true"
               android:layout_toRightOf="@+id/frag_post_address"
               android:text="Add location"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </RelativeLayout>
        <RelativeLayout
            android:id="@+id/frag_post_phovi"
            android:layout_below="@+id/frag_post_add_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/frag_post_imv_phovi"
                android:background="@drawable/ic_camera_enhance_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/frag_post_imv_phovi"
                android:text="Photos/Video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/button"
            android:layout_below="@+id/frag_post_phovi"
            android:layout_margin="@dimen/margin_left_profile"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/frag_post_btn_cancel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cancel"/>

            <Button
                android:id="@+id/frag_post_btn_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Share" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>